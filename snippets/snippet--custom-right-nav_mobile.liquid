<div class="menu">
  {% if settings.show_multiple_currencies and section.settings.header-logo-center == false %}
    <div class="currency-selector columns right-aligned">
      {% include 'snippet-currency-selector' %}
    </div>
  {% endif %}


  {% if section.settings.header-account-show and shop.customer_accounts_enabled %}
    <div class="custom--sub-account-show">
      <a class="search-link" href="/search?type=product&q=">{% include 'snippet-symbol' with 'search' %}</a>
      {% comment %} <a class="account-open" href="#">{{ 'layout.header.account_toggle_link' | t }}
        {% include 'snippet-symbol' with 'account' %}
      </a> {% endcomment %}
      <a href="#swym-wishlist" class="swym-wishlist">
        <i aria-hidden="true" focusable="false" role="presentation" class="fa fa-heart"></i>
      </a>
  	  <a class="cart-link" href="/cart">
        {% include 'snippet-symbol' with 'bag-fill' %}
        <span class="number-wrapper {% if cart.item_count == 0 %}hide{% endif %} {% if cart.item_count >= 10 %}morethan10{% endif %}"><span class="number {% if cart.item_count >= 10 %}morethan10{% endif %}">{{ cart.item_count }}</span></span>
          {% comment %} <i aria-hidden="true" focusable="false" role="presentation" class="fa fa-shopping-bag"></i> {% endcomment %}
			</a>        
    </div>
  {% endif %}

</div>

{% comment %} <div class="searchbar-container" style="display:inline-block;">
  <form  action="/search" method="get" role="search">
    {% if settings.search-products-only %}<input type="hidden" name="type" value="product" />{% endif %}
    <input name="q" type="text" placeholder="{{ 'layout.header.search_placeholder' | t }}" class="search-box hint text small" />
    {% comment %}<input type="submit" value="" name="submit" aria-hidden="true" class="glyph search"  />{% endcomment %}
    <button class="search">{% include 'snippet-symbol' with 'search' %}</button>
  </form>
  {% comment %} <a href="#" aria-hidden="true" class="searchbar-close cross">
    {% include 'snippet-symbol' with 'cross' %}
  </a> {% endcomment %}
</div> {% endcomment %}



