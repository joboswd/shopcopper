<div class="cart">
   	<div>
  	  <a class="cart-link" href="/cart"><span>{{ 'layout.header.cart' | t }}</span>
  	  {% include 'snippet-symbol' with 'bag-fill' %}
			<span class="number-wrapper {% if cart.item_count == 0 %}hide{% endif %} {% if cart.item_count >= 10 %}morethan10{% endif %}"><span class="number {% if cart.item_count >= 10 %}morethan10{% endif %}">{{ cart.item_count }}</span></span>
				{% comment %} <i aria-hidden="true" focusable="false" role="presentation" class="fa fa-shopping-bag"></i> {% endcomment %}
			</a>

  		<div class="recently-added">
  		  <table width="100%">
  			  <thead>
  			    <tr>
  			      <td colspan="3">{{ 'products.recently_added_popup.title' | t }}</td>
  			    </tr>
  			  </thead>

  			  <tbody>


  			  </tbody>

  			  <tfoot>
  			    <tr>
  						<td class="items-count">
                {% assign item_trans = 'products.recently_added_popup.item' | t %}
                {% if cart.item_count > 1 %}
                  {% assign item_trans = 'products.recently_added_popup.items' | t %}
                {% endif %}

                <a href="/cart">
                  <span class="number">{{ cart.item_count }}</span> {{ item_trans }}
                </a>
              </td>
  						<td colspan="2" class="text-right all-caps"><strong>{{ 'products.recently_added_popup.total' | t }} <span class="total-price money" style="margin-left:5px;">{{ cart.total_price | money }}</span></strong></td>
  			    </tr>
  			  </tfoot>

  			</table>

  			<div class="row">
  			  <div class="checkout columns">
  			    <a class="button" href="/cart">{{ 'products.recently_added_popup.checkout_button' | t }}</a>
  			  </div><!-- #cart-meta -->
  			</div>

  			<div class="error">
  			  <p>{{ 'products.recently_added_popup.unavailable' | t }}</p>
  			</div>

  		</div>
  	</div>
</div>

