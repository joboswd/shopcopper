// variables
$maroon: #5e1617;
$red: #c64646;



.template-password {
    background: #eed2cf;
    // font-family: "Seravek";
    min-height: 100vh;
    padding: 92px 0 32px;

    .top-part {
        display: block;
        margin: 0 auto;

        
        h3 {
            color: $maroon;
            font-size: 58px;
            letter-spacing: 8px;
            margin-bottom: 0px;
        }

        img {
            max-width: 646px;

            @media screen and (max-width: 656px){
                max-width: 100%;
            }
        }

        h2 {
            color: $red;
            font-size: 120px;
            font-weight: 700;
            letter-spacing: 11px;
            margin-bottom: 0px;
        }

        p {
            color: $maroon;
            font-family: "Work Sans",sans-serif;
            font-size: 46px;
            letter-spacing: 3px;
            font-weight: 900;
        }
    }

    #timer {
        color: #000;
        font-size: 113px;
        font-weight: bold;
        padding: 15px 0 0;
        text-transform: uppercase;
    }

    .sub-timer {
        margin-bottom: 80px;
        ul {
            margin-left: 23px;
            li {
                display: inline-block;
                padding: 0 75px;
            }
        }
    }

    .bottom-part {
        display: block;
        margin: 0 auto;

        .date {
            background: $maroon;
            display: block;
            color: #fff;
            font-size: 19px;
            letter-spacing: 2.5px;
            margin: 0 auto;
            max-width: 344px;
            padding: 16px 0;
        }
        p.hurry {
            color: $red;
            font-size: 23px;
            font-weight: bolder;
            letter-spacing: 2.5px;
            margin-top: 8px;
        }
        p.terms {
            color: $maroon;
            font-size: 14px;
            font-weight: bold;
            margin-top: 30px;
        }
    }
}