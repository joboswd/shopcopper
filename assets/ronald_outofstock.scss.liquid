$copperpink: #ea9999;

.product-unavailable {
    max-width: 100%!important;
}

#iStock-wrapper {
    margin-top: 30px;

    // h2 {
    //     color: #ec1919;
    // }
    p {
        line-height: 1.7em;
        margin-bottom: 25px;
        padding-right: 3px;
    }

    #iStock-fields {
        input#iStock-email-id {
            width: 100%;
        }

        input#iStock-notify-btn {
            border: 1px solid #e47e7e;
            background: $copperpink;
            line-height: 0px;

            &:hover {
                background: #e47e7e;
                transition: linear 250ms;
            }
        }
    }
}