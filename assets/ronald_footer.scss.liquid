.main-footer {
    background: #000;
    color: #fff;

    .wrapper {
        max-width: 85%;
        margin: 0 auto;
        overflow: hidden;
        padding: 30px 0 0 0;
        position: relative;
        z-index: 99;

        .columns {
            h2.title {
                border-bottom: 1px solid #444;
                line-height: 0px;
            }

            .content {
                margin-top: 46px;
            }

            &.subscribe {

                #contact_form {
                    margin: 0 auto;
                    width: 100%;

                    input[type="email"] {
                        background: #333;
                        border: 0px;
                        border-radius: 0px;
                        color: #fff;
                        padding: 22px 18px;
                        width: 82%;
    
                        &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
                            color: #fff;

                            @media screen and (min-width: 769px) and (max-width: 991px) {
                                text-align: center;
                            }
                        }
                        &::-moz-placeholder { /* Firefox 19+ */
                            color: #fff;

                            @media screen and (min-width: 769px) and (max-width: 991px) {
                                text-align: center;
                            }
                        }
                        &:-ms-input-placeholder { /* IE 10+ */
                            color: #fff;

                            @media screen and (min-width: 769px) and (max-width: 991px) {
                                text-align: center;
                            }
                        }
                        &:-moz-placeholder { /* Firefox 18- */
                            color: #fff;

                            @media screen and (min-width: 769px) and (max-width: 991px) {
                                text-align: center;
                            }
                        }

                        @media screen and (min-width: 992px) and (max-width: 1025px) {
                            padding: 22px 10px;
                            width: 69%;
                        }

                        @media screen and (min-width: 769px) and (max-width: 991px) {
                            padding: 21px 13px;
                            width: 100%;
                        }
                    }

                    input[type="submit"] {
                        background: #292929;
                        border-radius: 0px;
                        height: 44px;
                        margin-left: -11px;
                        padding: 0px 32px;
                        text-transform: none;

                        &:hover {
                            background: #1b1a1a;
                            transition: all 180ms;
                        }

                        @media screen and (min-width: 992px) and (max-width: 1025px) {
                            padding: 0 23px;
                        }

                        @media screen and (min-width: 769px) and (max-width: 991px) {
                            display: block;
                            height: 42px;
                            margin: 0 auto;
                            width: 85%;
                        }
                    }
                }
            }

            &.about {
                width: 100%;
            }
        }
    }
}