.main-footer {
    background: #171515;
    color: #fff;

    .wrapper {
        max-width: 85%;
        margin: 0 auto;
        overflow: hidden;
        padding: 30px 0 0 0;
        position: relative;
        z-index: 99;

        @media screen and (max-width: 480px) {
            max-width: 95%;
        }

        .columns {

            @media screen and (max-width: 480px) {
                padding: 0;
            }

            h2.title {
                border-bottom: 1px solid #615c5c;
                line-height: 0px;

                @media screen and (max-width: 480px) {
                    display: none;
                }
            }

            .content {
                margin-top: 46px;

                @media screen and (max-width: 480px) {
                    display: none;
                }
            }

            .mobile-collapse {
                position: relative;

                // &.plus {
                    
                // }

                &:after {
                    content: '\f067';
                    font-family: 'FontAwesome';
                    position: absolute;
                    top: 11px;
                    right: 7px;
                }

                &.minus {
                    &:after {
                        content: '\f068';
                        font-family: 'FontAwesome';
                        position: absolute;
                        top: 11px;
                        right: 7px;
                    }
                }                

                @media screen and (min-width: 481px) {
                    display: none;
                }

                .btn {
                    text-align: left;
                    width: 100%;
                    background: transparent;
                    border-top: 1px solid #615c5c;
                    border-radius: 0;
                    padding: 12px 0;

                    &:hover {
                        color: #fff;
                    }

                    &:focus {
                        outline: 0;
                    }
                }

                .content {
                    display: block;
                    margin-top: 0;
                    text-align: left;

                    ul.footer-nav {
                        li {
                            &:last-of-type {
                                padding: 0 0 8px;
                            }
                        }
                    }
                }
            }

            &.subscribe {

                .content {
                    display: block!important;

                    #contact_form {
                        margin: 0 auto;
                        width: 100%;

                        @media screen and (max-width: 480px) {
                            margin-top: 20px;
                        }
    
                        p {
                            @media screen and (max-width: 480px) {
                                text-align: center;
                            }
                        }
    
                        .input-container {
                            @media screen and (max-width: 480px) {
                                display: block;
                                margin: 0 auto;
                                text-align: center;
                            }
    
                            input[type="email"] {
                                background: #333;
                                border: 0px;
                                border-radius: 0px;
                                color: #fff;
                                padding: 22px 18px;
                                width: 80%;
            
                                &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
                                    color: #fff;
        
                                    @media screen and (min-width: 769px) and (max-width: 991px) {
                                        text-align: center;
                                    }
                                }
                                &::-moz-placeholder { /* Firefox 19+ */
                                    color: #fff;
        
                                    @media screen and (min-width: 769px) and (max-width: 991px) {
                                        text-align: center;
                                    }
                                }
                                &:-ms-input-placeholder { /* IE 10+ */
                                    color: #fff;
        
                                    @media screen and (min-width: 769px) and (max-width: 991px) {
                                        text-align: center;
                                    }
                                }
                                &:-moz-placeholder { /* Firefox 18- */
                                    color: #fff;
        
                                    @media screen and (min-width: 769px) and (max-width: 991px) {
                                        text-align: center;
                                    }
                                }
        
                                @media screen and (min-width: 1441px) and (max-width: 1729px) {
                                    padding: 22px 10px;
                                    width: 75%;
                                }
        
                                @media screen and (min-width: 1201px) and (max-width: 1440px) {
                                    padding: 22px 10px;
                                    width: 75%;
                                }
        
                                @media screen and (min-width: 992px) and (max-width: 1200px) {
                                    padding: 22px 10px;
                                    width: 69%;
                                }
        
                                @media screen and (min-width: 769px) and (max-width: 991px) {
                                    padding: 21px 13px;
                                    width: 100%;
                                }
    
                                @media screen and (max-width: 480px) {
                                    width: 50%;
                                }
                            }
        
                            input[type="submit"] {
                                background: #292929;
                                border-radius: 0px;
                                height: 44px;
                                margin-left: -11px;
                                padding: 0px 32px;
                                text-transform: none;
        
                                &:hover {
                                    background: #1b1a1a;
                                    transition: all 180ms;
                                }
        
                                @media screen and (min-width: 992px) and (max-width: 1440px) {
                                    padding: 0 23px;
                                }
        
                                @media screen and (min-width: 769px) and (max-width: 991px) {
                                    display: block;
                                    height: 42px;
                                    margin: 0 auto;
                                    width: 85%;
                                }
                            }
                        }
                    }
                }
            }

            &.about {
                width: 100%;

                .content {
                    @media screen and (max-width: 480px) {
                        display: block;
                    }
                }
            }
        }
    }
}