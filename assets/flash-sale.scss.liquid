// variables
$maroon: #5e1617;
$red: #c64646;



.template-password {
    background: #eed2cf;
    // font-family: "Seravek";
    min-height: 100vh;
    padding: 30px 0 32px;

    @media screen and (max-width: 480px) {
        padding: 18px 0 32px;
    }

    .top-part {
        display: block;
        margin: 0 auto;
        text-align: center;

        
        h3 {
            color: $maroon;
            font-size: 58px;
            letter-spacing: 8px;
            margin-bottom: 0px;

            @media screen and (max-width: 480px){
                font-size: 20px;
            }

            @media screen and (min-width: 481px) and (max-width: 768px){
                font-size: 38px;
            }
        }

        img {
            max-width: 646px;

            @media screen and (max-width: 656px){
                max-width: 100%;
            }

            @media screen and (max-width: 480px){
                max-width: 80%;
            }
        }

        h2 {
            color: $red;
            font-size: 120px;
            font-weight: 700;
            letter-spacing: 11px;
            margin-bottom: 0px;

            @media screen and (max-width: 480px){
                font-size: 57px;
                margin-bottom: 30px;
            }

            @media screen and (min-width: 481px) and (max-width: 768px){
                font-size: 100px;
            }
        }

        p {
            color: $maroon;
            font-family: "Work Sans",sans-serif;
            font-size: 46px;
            letter-spacing: 3px;
            font-weight: 900;

            @media screen and (max-width: 480px){
                font-size: 32px;
            }
        }
    }

    #timer {
        color: #000;
        font-size: 113px;
        font-weight: bold;
        padding: 15px 0 0;
        text-align: center;
        text-transform: uppercase;

        @media screen and (max-width: 480px){
            font-size: 48px;
        }

        @media screen and (min-width: 481px) and (max-width: 768px){
            font-size: 80px;
        }
    }

    .sub-timer {
        margin-bottom: 80px;
        text-align: center;

        @media screen and (max-width: 480px){
            margin: 0 auto 50px;
            width: fit-content;
        }

        ul {
            margin-left: 23px;

            @media screen and (max-width: 768px){
                margin: 0 auto;
                padding-inline-start: 0px;
                width: fit-content;
            }

            li {
                display: inline-block;
                padding: 0 75px;

                @media screen and (max-width: 480px){
                    padding: 0 15px;
                    text-align: center;
                }

                @media screen and (min-width: 481px) and (max-width: 768px){
                    padding: 0 40px;
                }
            }
        }
    }

    .login {
        margin-bottom: 40px;
        position: relative;
        text-align: center;
        top: auto;
        right: auto;

        p {
            color: $maroon;
            font-weight: bold;
            font-size: 22px;
            line-height: 27px;

            @media screen and (max-width: 480px){
                font-size: 18px;
            }
        }

        .login-form {
            visibility: visible!important;
            position: inherit;
            margin: 0 auto;
            position: inherit;
            left: auto;
            top: auto;
            width: fit-content;
            overflow: auto;

            form {
                input {
                    background: transparent;
                    border: 4px solid #000;
                }

                input[type=password] {
                    float: left;
                    width: 280px;
                }

                input[type=submit] {
                    background: #000;
                    color: #fff;
                    line-height: 40px;
                    margin-left: -7px;
                    float: left;
                }
            }
        }
    }

    .bottom-part {
        display: block;
        margin: 0 auto;

        .date {
            background: $maroon;
            display: block;
            color: #fff;
            font-size: 19px;
            letter-spacing: 2.5px;
            margin: 0 auto;
            max-width: 344px;
            padding: 16px 0;
        }
        p.hurry {
            color: $red;
            font-size: 23px;
            font-weight: bolder;
            letter-spacing: 2.5px;
            margin-top: 8px;
        }
        p.terms {
            color: $maroon;
            font-size: 14px;
            font-weight: bold;
            margin-top: 30px;
        }
    }
}