// variables
$lato: 'Lato', sans-serif;
$lucida: "Lucida Grande","Lucida Sans Unicode","Lucida Sans",Lucida,Helvetica,Arial,sans-serif;

// product page

.template-product {

    article.row {
        padding-bottom: 45px;
    }

    // featured image for gallery
    .product-page--images-container {
        @media screen and (min-width: 320px) and (max-width: 480px) {
            max-width: 100%;
        }
    }

    .product-page--cart-form-block {

        //thumbnails
        .product-page--thumbs {
            .product-page--thumbs-container {
                .product-page--thumb {
                    @media screen and (min-width: 320px) and (max-width: 480px) {
                        width: 90px;
                    }

                    .image--container {
                        img {
                            @media screen and (min-width: 320px) and (max-width: 480px) {
                                // width: 90%;
                                // height: auto;
                            }
                        }
                    }
                }
            }
        }

        .row.social-share {
            background: none;
            display: none;
            
            @media screen and (min-width: 1280px) {
                padding: 40px 0;
            }

            @media screen and (min-width: 769px) {
                display: block;
            }

            @media screen and (min-width: 769px) and (max-width: 991px) {
                padding: 23px 0;
            }

            .columns {
                padding-left: 0px;
                padding-right: 0px;

                @media screen and (min-width: 1280px) {
                    position: absolute;
                }

                h2.title {
                    float: left;
                    font-size: 0.929em;
                    margin-top: 19px;
                    margin-bottom: 0px;
                    margin-left: 0px;

                    @media screen and (min-width: 769px) and (max-width: 991px) {
                        display: block;
                        float: none;
                        margin-bottom: 14px;
                    }

                    @media screen and (min-width: 843px) and (max-width: 858px) {
                        margin-right: 47px;
                    }

                    @media screen and (min-width: 859px) and (max-width: 885px) {
                        margin-right: 56px;
                    }

                    @media screen and (min-width: 859px) and (max-width: 885px) {
                        margin-right: 56px;
                    }

                    @media screen and (min-width: 886px) and (max-width: 893px) {
                        margin-right: 61px;
                    }

                    @media screen and (min-width: 894px) and (max-width: 931px) {
                        margin-right: 77px;
                    }

                    @media screen and (min-width: 932px) and (max-width: 960px) {
                        margin-right: 89px;
                    }

                    @media screen and (min-width: 961px) and (max-width: 991px) {
                        margin-right: 96px;
                    }

                    @media screen and (min-width: 992px) and (max-width: 1279px) {
                        margin-right: 20px;
                    }

                    @media screen and (min-width: 1280px) {
                        margin-right: 30px;
                    }
                }

                .share-item {
                    border-radius: 100%;
                    float: left;
                    font-size: 17.5px;
                    margin: 7px;
                    height: 40px;
                    width: 40px;
                    padding: 0px;

                    .fw--icon {
                        margin-top: 10px;
                        margin-right: 0px;
                    }
                }
            }
        }
    }

    .product-page--description {

        // RTE block
        .rte-content {
            p {
                line-height: 1.643em;

                @media screen and (min-width: 320px) and (max-width: 480px) {
                    font-size: 12.5px;
                }
            }

            table {
                td {
                    font-size: 1em;

                    @media screen and (min-width: 320px) and (max-width: 480px) {
                        font-size: 12.5px;
                    }
                }
            }
        }

        // product additional details
        .accordion-container {
            position: relative;

            ul.accordion-menu {
                font-weight:400;
                list-style:none;
                padding:0;

                @media screen and (min-width: 320px) and (max-width: 480px) {
                    font-size: 12.5px;
                }
                
                li {
                    background:none;
                    padding:0;

                    header {
                        // background-color:#fafafa;
                        cursor:pointer;
                        padding:20px;
                        text-align:left;
                        transition:all 200ms ease;
                        user-select:none;
                        -khtml-user-select:none;
                        -moz-user-select:none;
                        -ms-user-select:none;
                        -webkit-touch-callout:none;
                        -webkit-user-select:none;

                        &:hover {
                            background-color:#cecece;
                        }

                        .plus_accordion {
                            float: right;
                            font-weight: 700;
                            font-size: 22px;
                        }
                    }

                    section.content {
                        overflow:hidden;
                        padding: 12px;
                        transition:all 200ms linear;

                        p {
                            margin:0; 
                            
                            @media screen and (min-width: 320px) and (max-width: 480px) {
                                font-size: 12.5px;
                            }

                            &.red-note {
                                color: #cc0000!important; 
                                margin-bottom: 12px;
                            }
                        }

                        ul, ol {
                            li {
                                @media screen and (min-width: 320px) and (max-width: 480px) {
                                    font-size: 12.5px;
                                }
                            }
                        }

                        .inner-content {
                            line-height: 1.725em;

                            .accordion-container {
                                margin-top: 25px;

                                .accordion-menu {
                                    li {
                                        &.open {
                                            header {
                                                &:after {
                                                    content: '\f077';
                                                    font-family: 'FontAwesome';
                                                    font-size: 1.375em;
                                                    margin-top: -2px;
                                                }
                                            }
                                        }
    
                                        &.closed {
                                            header {
                                                background: none;
                                                border-top: 1px solid #c0bdbb;
    
                                                &:hover {
                                                    background-color:#cecece;
                                                }
    
                                                &:after {
                                                    content: '\f078';
                                                    font-family: 'FontAwesome';
                                                    font-size: 1.375em;
                                                    margin-top: -3px;
                                                }
                                            }
    
                                            &:last-of-type {
                                                border-bottom: 1px solid #c0bdbb;
                                            }
                                        }
    
                                        header {
                                            padding: 10px;
                                        }

                                        section.content {
                                            ol {
                                                -webkit-padding-start: 0px;

                                                li {
                                                    margin-bottom: 12px;

                                                    &:last-of-type {
                                                        margin-bottom: 5px;
                                                    }

                                                    .small-note {
                                                        display: block;
                                                    }
                                                }
                                            }
                                        }
    
                                    } // end of li
                                }
                            } // end of accordion-container
                            
                            &.returns {

                                h3 {
                                    color: #ea9999;
                                    font-family: inherit;
                                    font-weight: 600;
                                }
                                ul {
                                    -webkit-padding-start: 24px;
                                    margin-bottom: 4px;
                                    margin-top: 12px;

                                    li {
                                        list-style-type: disc;
                                        margin-bottom: 8px;
                                    }
                                }
                                ol {
                                    li {
                                        margin-bottom: 8px;
                                    }
                                }
                            }
                        } // end of inner-content
                    }

                    &.open {
                        header {
                            background-color:#f39897;

                            &:after {
                                content: '-';
                                font-family: $lato;
                                font-size: 3.2em;
                                font-weight: 300;
                                margin-top: -20px;
                                position: absolute;
                                right: 14px;
                                
                            }

                            span.title {
                                color:#FFF;
                            }

                            .plus_accordion {
                                color: #fff;
                            }
                        }
                    }

                    &.closed {
                        header {
                            border-top: 2px solid #c0bdbb;
                            &:after {
                                content: '+';
                                font-family: $lato;
                                font-size: 2.7em;
                                font-weight: 300;
                                margin-top: -16px;
                                position: absolute;
                                right: 11px;
                            
                            }
                        }

                        section.content {
                            max-height: 0;
                            padding: 0 12px 0 12px;
                        }

                        &:last-of-type {
                            border-bottom: 2px solid #c0bdbb;
                        }
                    } // end of closed
                } // end of li
            } 
        }
    }

    // social block
    .row.social-share {
        background: none;
        display: none;

        @media screen and (max-width: 768px) {
            display: block;
            padding: 12px;

            .columns {
                padding-left: 20px;
                padding-right: 0px;
    
                h2.title {
                    display: inline-block;
                    float: left;
                    font-size: 0.929em;
                    margin: 19px 40px 0px 0px;

                    @media screen and (max-width: 375px) {
                        margin-right: 17px;
                    }
                }
    
                .share-item {
                    border-radius: 100%;
                    float: left;
                    font-size: 17.5px;
                    margin: 7px;
                    height: 40px;
                    width: 40px;
                    padding: 0px;
    
                    .fw--icon {
                        margin-top: 10px;
                        margin-right: 0px;
                    }
                }
            }
        }


    }

    // modal
    button.addtl-btns {
        background: none;
        border-radius: 0px;
        border-top: 1px solid #ebebeb;
        font-family: $lucida;
        font-size: 1em;
        font-weight: 700;
        letter-spacing: 1px;
        padding: 14px 5px;
        text-align: left;
        text-transform: capitalize;
        width: 100%;

        &:after {
            content: '\f054';
            float: right;
            font-family: 'FontAwesome';
        }

        &:last-of-type {
            border-bottom: 1px solid #ebebeb;
        }

        @media screen and (min-width: 320px) and (max-width: 480px) {
            font-size: 12.5px;
        }
    }

    .modal {
        background: transparent;
        margin-left: 0px;
        left: 0;
        top: 0!important;

        .modal-dialog {
            .modal-content {
                .modal-body {
                    padding-bottom: 30px;
                    
                    .inner-content {
                        line-height: 1.725em;
        
                        .accordion-container {
                            margin-top: 5px;
        
                            .accordion-menu {
                                @media screen and (min-width: 320px) and (max-width: 480px) {
                                    font-size: 12.5px;
                                }
                                
                                li {
                                    &.open {
                                        header {
                                            &:after {
                                                content: '\f077';
                                                font-family: 'FontAwesome';
                                                font-size: 1.375em;
                                                margin-top: -1px;
                                            }
                                        }
                                    }
        
                                    &.closed {
                                        header {
                                            background: none;
                                            border-top: 1px solid #c0bdbb;
        
                                            &:hover {
                                                background-color:#cecece;
                                            }
        
                                            &:after {
                                                content: '\f078';
                                                font-family: 'FontAwesome';
                                                font-size: 1.375em;
                                                margin-top: 0px;
                                            }
                                        }
        
                                        &:last-of-type {
                                            border-bottom: 1px solid #c0bdbb;
                                        }
                                    }
        
                                    header {
                                        padding: 10px;
                                    }
        
                                    section.content {
                                        ol {
                                            -webkit-padding-start: 0px;
        
                                            li {
                                                margin-bottom: 12px;
        
                                                &:last-of-type {
                                                    margin-bottom: 5px;
                                                }
        
                                                .small-note {
                                                    display: block;
                                                }
                                            }
                                        }
                                    }
        
                                } // end of li
                            }
                        } // end of accordion-container

                        &.payments {
                            @media screen and (min-width: 320px) and (max-width: 480px) {
                                font-size: 12.5px;
                            }

                            a {
                                text-decoration: underline;
                            }

                            ul.accordion-menu {
                                li {
                                    @media screen and (min-width: 320px) and (max-width: 480px) {
                                        font-size: 12.5px;
                                    }

                                    section.content {
                                        p {
                                            @media screen and (min-width: 320px) and (max-width: 480px) {
                                                font-size: 12.5px;
                                            }
                                        }

                                        ol {
                                            -webkit-padding-start: 15px;
                                        }

                                        ul {
                                            -webkit-padding-start: 10px;
                                        
                                            li {
                                                list-style-type: disc;
                                            }
                                        }
                                    }
                                }
                            }
                        }

                        &.shipping {
                            @media screen and (min-width: 320px) and (max-width: 480px) {
                                font-size: 12.5px;
                            }

                            a {
                                text-decoration: underline;
                            }

                            h3 {
                                color: #ea9999;
                                font-family: inherit;
                                font-size: 13px;
                                font-weight: 600;
                            }

                            table {
                                width: 100%;

                                td {

                                    @media screen and (min-width: 769px) {
                                        padding: 0.2em;
                                    }

                                    @media screen and (min-width: 320px) and (max-width: 480px) {
                                        font-size: 12.5px;
                                    }
                                }
                            }
                        }
                        
                        &.returns {
                            @media screen and (min-width: 320px) and (max-width: 480px) {
                                font-size: 12.5px;
                            }

                            a {
                                text-decoration: underline;
                            }
        
                            h3 {
                                color: #ea9999;
                                font-family: inherit;
                                font-size: 13px;
                                font-weight: 600;
                            }
                            ul {
                                -webkit-padding-start: 24px;
                                margin-bottom: 4px;
                                margin-top: 12px;
        
                                li {
                                    list-style-type: disc;
                                    margin-bottom: 8px;
                                }
                            }
                            ol {
                                li {
                                    margin-bottom: 8px;
                                }
                            }
                        }
                    } // end of inner-content
                }
            }
        }
    } // end of modal

    .similar-products {
        @media screen and (min-width: 320px) and (max-width: 769px) {
            padding-top: 70px;
            padding-bottom: 0px;
        }
    }

    // circle sale & sold-out
    .product--sale, .product--sold-out {
        top: 10px;
        right: -1px;
        
        @media screen and (min-width: 769px) {
            height: 70px;
            width: 70px;
        }

        @media screen and (min-width: 320px) and (max-width: 768px) {
            height: 50px;
            width: 50px;
        }
    }

    .product--sold-out {
        @media screen and (min-width: 320px) and (max-width: 768px) {
            font-size: 11.3px;
        }
    }
}

