// variables
$lato: 'Lato', sans-serif;

// product page

.template-product {

    article.row {
        padding-bottom: 45px;
    }

    // featured image for gallery
    .product-page--images-container {
        @media screen and (min-width: 320px) and (max-width: 480px) {
            max-width: 100%;
        }
    }

    //thumbnails
    .product-page--thumbs {
        .product-page--thumbs-container {
            .product-page--thumb {
                @media screen and (min-width: 320px) and (max-width: 480px) {
                    width: 90px;
                }

                .image--container {
                    img {
                        @media screen and (min-width: 320px) and (max-width: 480px) {
                            // width: 90%;
                            // height: auto;
                        }
                    }
                }
            }
        }
    }

    .product-page--description {

        // product additional details
        .accordion-container {
            position: relative;

            ul.accordion-menu {
                font-weight:400;
                font-size:12.5px;
                list-style:none;
                padding:0;
                
                li {
                    background:none;
                    padding:0;

                    header {
                        // background-color:#fafafa;
                        cursor:pointer;
                        padding:20px;
                        text-align:left;
                        transition:all 200ms ease;
                        user-select:none;
                        -khtml-user-select:none;
                        -moz-user-select:none;
                        -ms-user-select:none;
                        -webkit-touch-callout:none;
                        -webkit-user-select:none;

                        &:hover {
                            background-color:#cecece;
                        }

                        .plus_accordion {
                            float: right;
                            font-weight: 700;
                            font-size: 22px;
                        }
                    }

                    section.content {
                        overflow:hidden;
                        padding: 20px;
                        transition:all 200ms linear;

                        p {
                            margin:0; 
                            font-size: 12.5px;

                            &.red-note {
                                color: #cc0000!important; 
                                margin-bottom: 12px;
                            }
                        }

                        ul, ol {
                            li {
                                font-size: 12.5px;
                            }
                        }

                        .inner-content {
                            line-height: 1.725em;

                            .accordion-container {
                                margin-top: 25px;

                                .accordion-menu {
                                    li {
                                        &.open {
                                            header {
                                                &:after {
                                                    content: '\f077';
                                                    font-family: 'FontAwesome';
                                                    font-size: 1.375em;
                                                    margin-top: -2px;
                                                }
                                            }
                                        }
    
                                        &.closed {
                                            header {
                                                background: none;
                                                border-top: 1px solid #c0bdbb;
    
                                                &:hover {
                                                    background-color:#cecece;
                                                }
    
                                                &:after {
                                                    content: '\f078';
                                                    font-family: 'FontAwesome';
                                                    font-size: 1.375em;
                                                    margin-top: -3px;
                                                }
                                            }
    
                                            &:last-of-type {
                                                border-bottom: 1px solid #c0bdbb;
                                            }
                                        }
    
                                        header {
                                            padding: 10px;
                                        }

                                        section.content {
                                            ol {
                                                -webkit-padding-start: 0px;

                                                li {
                                                    margin-bottom: 12px;

                                                    &:last-of-type {
                                                        margin-bottom: 5px;
                                                    }

                                                    .small-note {
                                                        display: block;
                                                    }
                                                }
                                            }
                                        }
    
                                    } // end of li
                                }
                            } // end of accordion-container
                        }
                    }

                    &.open {
                        header {
                            background-color:#f39897;

                            &:after {
                                content: '-';
                                font-family: $lato;
                                font-size: 3.2em;
                                font-weight: 300;
                                margin-top: -20px;
                                position: absolute;
                                right: 14px;
                                
                            }

                            span.title {
                                color:#FFF;
                            }

                            .plus_accordion {
                                color: #fff;
                            }
                        }
                    }

                    &.closed {
                        header {
                            border-top: 2px solid #c0bdbb;
                            &:after {
                                content: '+';
                                font-family: $lato;
                                font-size: 2.7em;
                                font-weight: 300;
                                margin-top: -16px;
                                position: absolute;
                                right: 11px;
                            
                            }
                        }

                        section.content {
                            max-height:0;
                            padding:0 20px;
                        }

                        &:last-of-type {
                            border-bottom: 2px solid #c0bdbb;
                        }
                    } // end of closed
                } // end of li
            } 
        }
    }

    // social block
    .row.social-share {
        padding: 40px 0;

        @media screen and (min-width: 320px) and (max-width: 480px) {
            padding: 30px 0;
        }

        .share-item {

            @media screen and (min-width: 414px) and (max-width: 480px) {
                margin: 4px;
                padding: 7px 8px 4px 9px;
            }

            @media screen and (min-width: 375px) and (max-width: 413px) {
                margin: 0px;
                padding: 5px 5px 5px 9px;
            }

            span {
                @media screen and (min-width: 769px) {
                    letter-spacing: 1px;
                }
            }
        }
    }
}

